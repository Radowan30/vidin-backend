# ============================================================================
# VidIn Backend Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values

# ----------------------------------------------------------------------------
# AI/LLM Services
# ----------------------------------------------------------------------------
# Groq API key - Get from https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Groq model to use - Recommended: llama-3.3-70b-versatile
GROQ_MODEL=llama-3.3-70b-versatile

# ----------------------------------------------------------------------------
# Text-to-Speech
# ----------------------------------------------------------------------------
# ElevenLabs API key - Get from https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ElevenLabs Voice ID - Find voice IDs in your ElevenLabs dashboard
ELEVENLABS_VOICE_ID=your_voice_id_here

# ----------------------------------------------------------------------------
# Cloud Storage (Supabase)
# ----------------------------------------------------------------------------
# Supabase Project URL - Get from https://supabase.com/dashboard
SUPABASE_URL=https://your-project.supabase.co

# Supabase Service Role Key (not anon key) - Found in Project Settings > API
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Supabase Storage Bucket name for videos
SUPABASE_BUCKET=vidin-videos

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
# Port for the FastAPI server
PORT=8000

# Frontend URL for CORS (comma-separated for multiple)
FRONTEND_URL=http://localhost:5173

